# ==============================================
# Smart Procure Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in the values

# Database (Required)
DATABASE_URL="postgresql://user:password@localhost:5432/smartprocure?schema=public"

# JWT Authentication (Required - MUST be changed in production!)
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secure-jwt-secret-minimum-32-characters"
JWT_EXPIRES_IN="24h"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS (Comma-separated list of allowed origins for production)
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Google Gemini AI (Optional - for AI features)
GEMINI_API_KEY="your-gemini-api-key"

# Email Service - Resend (Optional)
RESEND_API_KEY="your-resend-api-key"
FROM_EMAIL="noreply@yourdomain.com"

# WhatsApp Business API (Optional)
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_ACCESS_TOKEN="your-access-token"

# AWS S3 Storage (Optional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-south-1"
AWS_S3_BUCKET="smartprocure-files"

# Swagger Documentation (Optional - disable in production)
ENABLE_SWAGGER="false"
